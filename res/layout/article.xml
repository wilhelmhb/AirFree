<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:numColumns="auto_fit"
    android:padding="1sp"
    style="@style/AppTheme"
    android:id="@+id/element"
    android:background="#801051"
    tools:context="XProjets.airfree.Recherche"
    android:layout_weight="1">
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:background="#801051"
        android:scaleType="fitCenter"
        android:id="@+id/apercu"
        android:src="@drawable/bloc_luxe"/>
    <!--<GridView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:gravity="center">-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intitule"
            android:text="Nom de l'article"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#777777"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vendeur"
                android:gravity="start"
                android:text="Nom du vendeur"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:textColor="@color/bleu_logo"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:id="@+id/prix"
                android:gravity="end"
                android:text="Prix en €"
                android:textColor="#777777"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details"
            android:text="Des détails sur l'article,
                éventuellement sur plusieurs lignes"
            android:singleLine="false"
            android:textColor="#888888"/>
    </LinearLayout>
    <!--</GridView>-->
</GridLayout>