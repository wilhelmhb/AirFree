<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#801051" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="1dp"
                android:bottom="0dp"
                android:top="0dp"
                android:right="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#801051"
                android:endColor="#992f2f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="1dp"
                android:bottom="0dp"
                android:top="0dp"
                android:right="1dp" />
        </shape>
    </item>
</selector>